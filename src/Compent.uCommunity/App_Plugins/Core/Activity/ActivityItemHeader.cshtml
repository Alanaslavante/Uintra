@using uCommunity.Core
@using uCommunity.Core.Extentions

@model uCommunity.Core.Activity.Models.IntranetActivityHeaderModel

<header class="content__item-heading clearfix">
    <div class="content__item-avatar">
        <a href="@Model.DetailsPageUrl">
            <img class="content__item-avatar-img" style="width: 60px; height: 60px;" src="@ImageHelper.GetImageSrcOrDefaultAsBase64(Model.Creator?.Photo)" />
        </a>
    </div>
    <div class="content__item-title-holder">
        <h2 class="content__item-title"><a class="content__item-title-link" href="@Model.DetailsPageUrl">@Model.Title</a></h2>
        <p class="content__item-meta">
            @foreach (var date in Model.Dates)
            {
                <span class="content__item-date">@date</span>
                <span class="content__item-divider"> - </span>
            }
            <span class="content__item-category">@Html.Localize(Model.Type)</span>
            <span class="content__item-name">, @(Model.Creator?.DisplayedName)</span>
        </p>
    </div>
</header>