@using Compent.uCommunity.Core.Comments
@using uCommunity.Comments

@{
    ICommentable activity = new CustomCommentable { Id = Guid.Parse(CommentsTestConstants.ActivityId), Comments = Enumerable.Empty<Comment>() };

    var commentsPageHelper = DependencyResolver.Current.GetService<ICommentsPageHelper>();
    var tabs = commentsPageHelper.GetCommentsPageTab();
}

@{ Html.RenderPartial("~/Views/CommentsPage/Tabs.cshtml", tabs);}

@Html.Action("OverView", "Comments", new { commentsInfo = activity })