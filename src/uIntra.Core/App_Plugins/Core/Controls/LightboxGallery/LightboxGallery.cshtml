@using uIntra.Core
@using System.Linq
@model uIntra.Core.Controls.LightboxGallery.LightboxGalleryOverviewModel

@if (Model.GalleryItems.Any())
{
    <ul id="js-lightbox-gallery" class="gallery js-lightbox-gallery clearfix">
        @{
            foreach (var media in Model.GalleryItems)
            {
                switch (media.Type.Id)
                {
                    case (int)MediaTypeEnum.Image:
                        var originalSize = $"{media.Width}x{media.Height}";

                        <li class="gallery__item">
                            <img class="gallery__image" src="@media.Url" style="cursor: pointer" data-full-size="@originalSize" data-full-url="@media.Url" height="100" />
                        </li>
                        break;
                    case (int)MediaTypeEnum.Document:
                        <li class="gallery__item">
                            <a href="@media.Url" target="_blank">
                                <span class="file-extension __@media.Extention"></span>
                            </a>
                        </li>
                        break;
                }
            }
        }
    </ul>
            }