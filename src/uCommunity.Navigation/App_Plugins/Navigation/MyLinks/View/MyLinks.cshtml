@using uCommunity.Core.Extentions
@using uCommunity.Navigation.DefaultImplementation
@model MyLinksViewModel

<ul class="side-nav js-my-links__opener" id="myLinksContainer">
    <li class="side-nav__item">
        <a class="side-nav__link">@Html.Localize("Links.Menu.lbl")</a>
        <span class="side-nav__arrow"></span>
        <ul id="js-myLinks-ul" class="side-nav">
            @{ Html.RenderAction("MyLinksList", "Navigation", new {model = @Model.Links}); }
        </ul>
    </li>
    <li class="side-nav__item">
        @Ajax.ActionLink(Html.Localize("MyLinks.Add.lbl")
                "Add",
                "Navigation",
                new { contentId = Model.ContentId },
                new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "myLinksContainer", InsertionMode = InsertionMode.Replace },
                new { @class = "side-nav__link js-myLinks-add", })
        
        @Ajax.ActionLink(Html.Localize("MyLinks.Remove.lbl")
                "Remove",
                "Navigation",
                new { contentId = Model.ContentId },
                new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "myLinksContainer", InsertionMode = InsertionMode.Replace },
                new { @class = "side-nav__link js-myLinks-remove" })
    </li>
</ul>