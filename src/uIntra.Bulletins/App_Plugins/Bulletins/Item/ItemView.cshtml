@model uIntra.Bulletins.BulletinItemViewModel

<div class="feed__item">
    <div class="clearfix">
        @{ Html.RenderAction("ItemHeader", "Bulletins", new { model = Model.HeaderInfo } )}; }
    </div>
    <div class="feed__item-image"> </div>
    @if (!string.IsNullOrWhiteSpace(Model.ShortDescription.StripHtml()))
    {
        <div class="feed__item-txt _clamp">
            @Html.Raw(Model.ShortDescription)
        </div>
    }
    <div class="feed__item-images">
        @{ Html.RenderAction("Preview", "LightboxGallery", new { model = Model.LightboxGalleryPreviewInfo }); }
    </div>
</div>
