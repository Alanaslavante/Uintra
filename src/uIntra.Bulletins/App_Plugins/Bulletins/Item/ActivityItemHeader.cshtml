@using uIntra.Core.Extentions
@model uIntra.Core.Activity.IntranetActivityItemHeaderViewModel
@{
    var detailsPageUrl = ViewData.GetActivityDetailsPageUrl(Model.Type.Id, Model.ActivityId);
    //TODO Add link to the user profile page to the feed__item-title-link
}

<header class="feed__item-heading clearfix">
    @Html.Action("Photo", "User", new { user = Model.Creator })
    <div class="feed__item-title-holder">
        <h2 class="feed__item-title"><a class="feed__item-title-link" href="">@Model.Title</a></h2>
        <p class="feed__item-meta">
            <a class="feed__item-meta-link" href="@detailsPageUrl">
                @foreach (var date in Model.Dates)
                {
                    <span class="feed__item-date">@date</span>
                    <span class="feed__item-divider"> - </span>
                }
                <span class="feed__item-category">@Html.Localize(Model.Type.Id)</span>
            </a>
        </p>
    </div>
</header>