@using uIntra.Core.Extentions
@model uIntra.Bulletins.BulletinListCreateFormModel

<div class="bulletin__btn-holder _for-mobile">
    <a class="form__btn _submit js-expand-bulletin">@Html.Localize("BulletinsCreate.MobileBtn.lbl")</a>
</div>
<div class="create-bulletin js-create-bulletin">
    <div class="create-bulletin__user js-create-bulletin__user hidden">
        @{ Html.RenderAction("CreationFormItemHeader", "Bulletins", Model.HeaderInfo); }
    </div>
    <div class="dropzone">
        <div class="dropzone-previews js-dropzone-previews hidden"></div>
    </div>
    <button class="create-bulletin__close js-create-bulletin__description-close hidden"></button>
    <div class="create-bulletin__description js-create-bulletin__description"
         data-placeholder="@Html.Localize("BulletinsCreate.FormPlaceholder.lbl")"></div>
    <input type="hidden" class="js-create-bulletin__description-hidden" />
    <div class="create-bulletin__toolbar ql-toolbar ql-snow js-create-bulletin__toolbar hidden">
        <span class="ql-formats">
            <button type="button" class="ql-bold"></button>
            <button type="button" class="ql-italic"></button>
            <button type="button" class="ql-link"></button>
        </span>
        <span class="ql-formats">
            <button type="button" class="js-dropzone" data-allowed="@Model.AllowedMediaExtentions"
                    data-remove-text="@Html.Localize("FileUploadView.RemoveFile.lbl")">
                @Html.Localize("FileUploadView.File.lbl")
            </button>
            <input type="hidden" class="js-new-media" />
        </span>
        <span class="ql-formats">
            <button class="_send js-toolbar__send-button" data-url="@Url.Action("Create", "Bulletins")" disabled="disabled">@Html.Localize("BulletinsCreate.Post.lbl")</button>
        </span>
    </div>
</div>