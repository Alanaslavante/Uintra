@using System.Web.Mvc.Html
@using uIntra.Core.Extensions
@using Extensions
@model uIntra.Core.Activity.IntranetActivityDetailsHeaderViewModel
@{
    var inactiveUser = Model.Owner.Inactive ? "_inactive" : string.Empty;
}

<header class="feed__item-heading @inactiveUser">
    @Html.Action("Photo", "User", new { user = Model.Owner })
    <div class="feed__item-title-holder">
        <p class="feed__item-meta">
            @foreach (var date in Model.Dates)
            {
                <span class="feed__item-date">@date</span>
                <span class="feed__item-divider"> - </span>
            }
            <span class="feed__item-category">@Html.Localize(Model.Type.Name)@(Model.Owner != null ? "," : string.Empty)</span>
            @if (Model.Owner != null)
            {
                <a href="@Model.Links.Owner">
                    <span class="feed__item-name">@Model.Owner.DisplayedName</span>
                </a>
            }
            <span class="feed__item-inactive">[@Html.Localize("ActivityItemHeader.Creator.Inactive.lbl")]</span>
        </p>
    </div>
</header>
@if (Model.Title.HasValue())
{
    <h2 class="feed__item-title">@Model.Title</h2>
}