@using uIntra.Core.Extentions
@model uIntra.Bulletins.BulletinPreviewViewModel
    
@{
    var profilePageUrl = ViewData.GetProfilePageUrl(Model.Creator.Id);
    var detailsPageUrl = ViewData.GetActivityDetailsPageUrl(Model.ActivityType.Id, Model.Id);
}
<section class="content">
    <div class="row clearfix">
        <h4>
            <a href="@detailsPageUrl">@Html.Raw(Model.Description)</a>            
        </h4>
        
        <h4>
            Creator: 
            <a href="@profilePageUrl">@Model.Creator.DisplayedName</a>
        </h4>
        
        <h4>
            Publish date: @Model.PublishDate

        </h4>
    </div>
</section>
