@using uIntra.Core.Extentions
@model uIntra.Bulletins.BulletinListCreateFormModel

<div class="create-bulletin js-create-bulletin">

    <div class="user js-create-bulletin__user hidden">
        @Html.Action("ActivityItemHeader", "ActivityHeader", new { header = Model.HeaderInfo })
    </div>

    <div class="dropzone-previews js-dropzone-previews hidden"></div>

    <div class="js-create-bulletin__description-close hidden">X</div>

    <div class="create-bulletin__description js-create-bulletin__description">
    </div>

    <input type="hidden" class="js-create-bulletin__description-hidden" />

    <div class="ql-toolbar ql-snow js-create-bulletin__toolbar hidden">
        <span class="ql-formats">
            <button type="button" class="ql-bold"></button>
            <button type="button" class="ql-italic"></button>
            <button type="button" class="ql-underline"></button>
            <button type="button" class="ql-link"></button>
        </span>
        <span class="ql-formats">
            <button type="button" class="ql-image"></button>
        </span>
        <span class="ql-formats">
            <button type="button" class="js-dropzone" data-allowed="@Model.AllowedMediaExtentions"
                    data-remove-text="@Html.Localize("FileUploadView.RemoveFile.lbl")">
                File
            </button>
            <input type="hidden" class="js-new-media" />
        </span>
        <span class="ql-formats">
            <button class="js-toolbar__send-button" disabled="disabled">Post</button>
        </span>
    </div>
</div>
<br /> 