@using Compent.uIntra.Core.Comments
@{
    ViewBag.Title = "Comments Page";
    var commentsPageHelper = DependencyResolver.Current.GetService<ICommentsPageHelper>();
    var tabs = commentsPageHelper.GetCommentsPageTab();

    var homePage = UmbracoContext.Current.ContentCache.GetAtRoot().First(el=>el.DocumentTypeAlias.Equals("homePage"));
    var editPage = homePage.DescendantOrSelf("commentsEditPage");
}

@{ Html.RenderPartial("~/Views/CommentsPage/Tabs.cshtml", tabs);}

@{ Html.RenderAction("Preview", "Comments", new { activityId = CommentsTestConstants.ActivityId, link = editPage.Url }); }