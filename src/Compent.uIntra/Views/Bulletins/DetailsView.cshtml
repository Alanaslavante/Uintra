@using System.Web.Mvc.Html
@using uIntra.Core.Activity
@using uIntra.Core.Extentions
@model Compent.uIntra.Core.Bulletins.BulletinExtendedViewModel 

<section class="content">
    <div class="row clearfix">
        <div class="col-md-9">
            <div class="feed__btns clearfix">
                <a href="#" class="btn pull-right hide"><i class="glyphicon glyphicon-print"></i>@Html.Localize("DetailsView.Print.lbl")</a>
                @if (Model.CanEdit)
                {
                    <a class="btn pull-right _edit-bulletin" href="@ViewData.GetActivityEditPageUrl(Model.ActivityType.Id, Model.Id)">@Html.Localize("DetailsView.Edit.lbl")</a>
                }
                <a class="link__back" href="@($"{Context.GetBackLink(ViewData.GetActivityOverviewPageUrl(Model.ActivityType.Id))}#{Model.Id}")">@Html.Localize("DetailsView.GoBal.lbl")</a>
            </div>
            <div class="feed__item _details">
                @{ Html.RenderAction("DetailsHeader", "Bulletins", Model.HeaderInfo); }
                <div class="feed__item-txt">
                    @Html.Raw(Model.Description)
                </div>
                <div class="feed__item-images">
                    @{ Html.RenderAction("RenderGallery", "LightboxGallery", new {mediaIds = Model.Media}); }
                </div>
                <div class="feed__item-feed">
                    <div class="feed__item-feed-holder">
                        @{ Html.RenderAction("Likes", "Likes", new { likesInfo = Model.LikesInfo }); }
                    </div>
                </div>
                <div class="comments">
                    @{ Html.RenderAction("OverView", "Comments", new { commentsInfo = Model.CommentsInfo });}
                </div>
            </div>
        </div>
    </div>
</section>