@using uIntra.Core.Extentions
@model uIntra.Navigation.MyLinksViewModel

<ul class="side-nav _links">
    <li class="side-nav__item js-side-nav__item">
        <a class="side-nav__link _title-link"><span class="icon-star side-nav__icon"></span> @Html.Localize("Links.Menu.lbl")</a>
        <span class="side-nav__arrow js-side-nav__opener"></span>
        <ul id="js-myLinks-sortable" class="side-nav js-myLinks-container">
            @{ Html.RenderAction("List", "MyLinks", new { model = @Model.Links }); }
        </ul>
    </li>
    <li class="side-nav__item">
        <div class="form__btn-holder">
            <a class="btn _add js-myLinks-add-btn @(Model.IsLinked ? "_disabled" : string.Empty)" data-url="@Url.Action("Add", "MyLinks")" data-content-id="@Model.ContentId">@Html.Localize("MyLinks.Add.lbl")</a>
        </div>
    </li>
</ul>